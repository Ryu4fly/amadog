<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center mt-4">Edit Your Account</h1>

      <%= simple_form_for @user, url: user_path(@user) do |f| %>
      <%# <%= form_for(:user, :url => session_path(:user)) do |f| %>

      <div class="form-group">
        <div class="ml-5 mt-5 row">
          <div class="col-sm-3">
            <% if resource.avatar.attached? %>
              <%= image_tag resource.avatar.variant(resize: "100x100!"), class: "rounded-circle" %>
            <% else %>
              <%= image_tag gravatar_image_url(current_user.email, size: 100), height: 100, width: 100, class: "rounded-circle" %>
            <% end %>
          </div>

          <div class="col-sm-8 d-flex justify-content-center align-items-center">
            <%= f.file_field :avatar %>
          </div>
        </div>
      </div><br>

      <%= f.input :username %>
      <%= f.input :bio, :input_html => {:rows => 7}  %>
      <%= f.input :address %>
      <%= f.input :pet, collection: @pets%>
      <%= f.button :submit, "Confirm details" %>
      <% end %>
  </div>
</div>
